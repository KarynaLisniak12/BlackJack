@using BlackJack.BusinessLogic.Helpers;
@model BlackJack.ViewModels.ViewModels.NameAndBotAmountInputViewModel
@{
    ViewBag.Title = "StartGame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StartGame</h2>

@using (Html.BeginForm("StartGame", "StartGame", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.Label(InputMessage._nameInput, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HumanName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HumanName)
        </div>
    </div>

    <div class="form-group">
        @Html.Label(InputMessage._botAmountInput, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AmountOfBots, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AmountOfBots)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="Submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
}

