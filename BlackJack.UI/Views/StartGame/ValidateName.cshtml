@using BlackJack.ViewModels.ViewModels;
@model StartGameValidateNameView
@{
    Layout = "~/Views/Shared/_StartPage.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BlackJack</h1>

    @using (Html.BeginForm("ValidateName", "StartGame", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-md-2">Name: </label>
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(Model.ValidationMessage))
                {
                    <div class="alert alert-danger">@Model.ValidationMessage</div>
                }
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                <br />
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>
        </div>
    }
</div>